<%- include('../partials/sidebar') %>
<link rel="stylesheet" href="/css/button8.css" />

<div class="row">
    <div class="col mt-2">
        <div class="form-floating">
            <select onchange="val()" class="form-select" id="floatingSelect" aria-label="Floating label select example">
              <option value="1">FOR-EDP-025</option>
              <option value="asdsadsd">asdsadsad</option>
            </select>
            <label for="floatingSelect">Escolha o documento a ser preenchido:</label>
          </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        <a href="/editar-novo-documento">
            <button type="button" class="button-8 mb-2" id="result">Escolher</button>
        </a>
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        <embed src="/enviar-documento-qualidade#toolbar=0&navpanes=0&scrollbar=0" class="mostraPdf" width="100%" height="800px" style="resize: both; overflow: auto;" type="application/pdf">
    </div>
</div>

<script type="text/javascript">
    function val() {
        document.getElementsByClassName('mostraPdf')[0].src = "";
        setTimeout(()=>{
            document.getElementsByClassName("button-8")[0].style.display = "block"
            document.getElementsByClassName('mostraPdf')[0].src = "/enviar-documento-qualidade#toolbar=0&navpanes=0&scrollbar=0";
        }, 100)
    }
</script>