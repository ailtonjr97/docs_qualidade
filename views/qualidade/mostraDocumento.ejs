<%- include('../partials/sidebar') %>
<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/button8.css" />
<link rel="stylesheet" href="/css/loading.css" />

<style>
    /* CSS for the black border */
    .black-border {
        border: 2px solid black; /* 2px width and black color */
        padding: 20px; /* Add some padding for content spacing */
    }
</style>

<body>
    <div class="black-border mt-2">

        <form action="/salvar-novo-documento" method="POST">

        <div class="row">
            <div class="col">Logo</div>
            <div class="col">
                <h1>Controle de Retrabalho/Reprocesso</h1>
            </div>
            <div class="col">
                <div class="row" style="float: right;">
                    <div class="col">
                        <input type="text" name="tipo_doc" id="" value="<%=doc.tipo_doc%>" readonly>
                        <br>
                        <%const currentDate = new Date();%>
                        Data: <%=currentDate.getDate()%> / <%=currentDate.getMonth() + 1%> / <%=currentDate.getFullYear()%>
                        <br>
                        Rev: 01
                    </div>
                </div>
            </div>
        </div>

        <hr>
        <div class="row" style="text-align: center;"><h3 style="font-size: 25px;">QUALIDADE:</h3></div>

        <div class="table-wrapper table-responsive table-striped mb-4">
            <table class="fl-table" id="myTable">
              <thead>
                <tr style="height: 25px">
                  <th>Data</th>
                  <th>Inspetor</th>
                  <th>Código do Produto</th>
                  <th>Descrição</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <input type="date" name="data" id="" value="<%=doc.data%>" readonly>
                  </td>
                  <td>
                    <select name="inspetor" id="">
                        <option value="<%=doc.inspetor%>"><%=doc.inspetor%></option>
                    </select>
                  </td>
                  <td>
                    <input type="text" name="cod_prod" id="" value="<%=doc.cod_prod%>">
                  </td>
                  <td>
                    <textarea name="descri" id="" cols="60" rows="1">
                        <%=doc.descri%>
                    </textarea>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>


          <div class="table-wrapper table-responsive table-striped mb-4">
            <table class="fl-table" id="myTable">
              <thead>
                <tr style="height: 25px">
                  <th>Lote/ODF</th>
                  <th>Lance</th>
                  <th>Quantidade/Metragem</th>
                  <th>CPNC Nº</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <input type="text" name="lote_odf" id="" value="<%=doc.lote_odf%>">
                  </td>
                  <td>
                    <input type="text" name="lance" id="" value="<%=doc.lance%>">
                  </td>
                  <td>
                    <input type="text" name="quantidade_metragem" id="" value="<%=doc.quantidade_metragem%>">
                  </td>
                  <td>
                    <input type="text" name="cpnc_numero" id="" value="<%=doc.cpnc_numero%>">
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <hr>
          <div class="row">
            <div class="col">
                <textarea name="motivo_cpnc" id="" rows="2" style="width: 100%;" placeholder="Motivo da NC:"></textarea>
            </div>
          </div>

          <div class="row">
            <div class="col">
                <button type="submit">Finalizar</button>
            </div>
          </div>
        </form>
    </div>
</body>

<script type="text/javascript" src="/js/carregador.js"></script>
<script type="text/javascript" src="/js/confirmation.js"></script>
<script type="text/javascript" src="/js/procura.js"></script>