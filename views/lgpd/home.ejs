<%- include('../partials/sidebar') %>
<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/button8.css" />
<link rel="stylesheet" href="/css/loading.css" />


<div id="loading"></div>

    <div class="row" style="margin-top: 10px;">
      <div class="col-sm-3">
        <h4>Documentos</h4>
      </div>
      <div class="col-lg-4">
      </div>
      <div class="col-lg-5">
          <button type="button" class="button-8 mb-2" id="result" style="float: right;">
          <span class="counter-value"><%=contagem%></span>
          resultados
          </button>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col">
        <div class="form-floating">
          <input type="text" class="form-control" id="procuraBtn0" onkeyup="procura(0, 'procuraBtn0')"/>
          <label for="procuraBtn0">ID:</label>
        </div>
      </div>
      <div class="col">
        <div class="form-floating">
          <input type="text" class="form-control" id="procuraBtn1" onkeyup="procura(1, 'procuraBtn1')"/>
          <label for="procuraBtn1">Nome:</label>
        </div>
      </div>
      <div class="col">
        <div class="form-floating">
          <input type="text" class="form-control" id="procuraBtn2" onkeyup="procura(2, 'procuraBtn2')"/>
          <label for="procuraBtn2">Tipo:</label>
        </div>
      </div>
      <div class="col">
        <div class="form-floating">
          <input type="text" class="form-control" id="procuraBtn3" onkeyup="procura(3, 'procuraBtn3')"/>
          <label for="procuraBtn3">Tamanho:</label>
        </div>
      </div>
    </div>
    <div class="table-wrapper table-responsive table-striped mb-4">
      <table class="fl-table" id="myTable">
        <thead>
          <tr style="height: 25px">
            <th>ID</th>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Tamanho</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <%files.forEach ((file)=>{%>
          <tr>
            <td>
                <p><%=file.id%></p>
            </td>
            <td>
              <p><%=file.originalname%></p>
            </td>
            <td>
                <p>
                  <%if(file.mimetype == 'application/pdf'){%>
                    PDF
                  <%}%>
                  <%if(file.mimetype == 'video/mp4'){%>
                    MP4
                  <%}%>
                  <%if(file.mimetype == 'image/jpg'){%>
                    JPG
                  <%}%>
                  <%if(file.mimetype == 'image/png'){%>
                    PNG
                  <%}%>
                </p>
            </td>
            <td>
                <p><%=(file.size / 1000000).toFixed(2)%> MB</p>
            </td>
            <td>
              <a href="/visualizar/<%=file.id%>">
                <button type="button" class="button-8" id="result"><i class="fa-solid fa-eye" style="color: #2a67cf;"></i></button>
              </a>
              <a href="/download/<%=file.id%>">
                <button type="button" class="button-8" id="result"><i class="fa-solid fa-file-arrow-down" style="color: #2a67cf;"></i></button>
              </a>
            </td>
          </tr>
          <%})%>
        </tbody>
      </table>
    </div>


<script type="text/javascript" src="/js/carregador.js"></script>
<script type="text/javascript" src="/js/confirmation.js"></script>
<script type="text/javascript" src="/js/procura.js"></script>